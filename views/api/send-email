// Exemplo: src/controller/emailController.js
const nodemailer = require('nodemailer');

exports.sendEmail = async (req, res) => {
  const { email, nome, sobrenome } = req.body;
  // Gere o código de verificação aqui (exemplo: 5 dígitos)
  const code = Math.floor(10000 + Math.random() * 90000);

  // Configure o transporter do nodemailer
  const transporter = nodemailer.createTransport({
    service: 'gmail', // ou outro serviço
    auth: {
      user: 'testeemailsender1@gmail.com',
      pass: 'testeemail1' 
    }
  });

  const mailOptions = {
    from: 'testeemailsender1@gmail.com',
    to: email,
    subject: 'Código de Verificação',
    text: `Olá ${nome}, seu código de verificação é: ${code}`
  };

  try {
    await transporter.sendMail(mailOptions);
    // Salve o código em sessão ou base de dados para validar depois
    req.session.verificationCode = code;
    res.json({ success: true });
  } catch (error) {
    res.json({ success: false, message: error.message });
  }
};
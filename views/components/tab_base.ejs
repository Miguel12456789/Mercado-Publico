<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Helpdesk Público</title>
    <link rel="stylesheet" href="tab_base.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <div id="results-table" style="display: none;">
        <div class="container">
            <!-- Breadcrumb Navigation -->
            <div class="breadcrumb">
                <a href="/base_gov">Início</a> / Pesquisa
            </div>

            <!-- Last Update -->
            <div class="last-update">
                Última atualização: <span id="data-atualizacao"></span>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                <h1>PESQUISA</h1>
                <h2>Contratos</h2>

                <!-- Contador de Resultados -->
                <div class="results-counter">
                    <div id="count-display" class="count-display"
                        data-total-contracts="<%= pagination.totalContracts || 0 %>">
                        <span id="count-number">0</span> contratos encontrados
                    </div>
                </div>

                <!-- Results Table -->
                <div class="results-section">
                    <h3 class="section-title">Informação detalhada</h3>
                    <div class="table-container">
                        <table class="results-table">
                            <thead>
                                <tr>
                                    <th>Objeto do contrato</th>
                                    <th>Tipo de procedimento</th>
                                    <th>Adjudicante</th>
                                    <th>Adjudicatário</th>
                                    <th>Preço contratual</i></th>
                                    <th>Data de publicação</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% const contractsList=typeof contracts !=='undefined' ? contracts : []; %>
                                    <% if (contractsList.length> 0) { %>
                                        <% contractsList.forEach((contract, index)=> { %>
                                            <tr>
                                                <td>
                                                    <%= contract.tiposContrato || 'N/A' %>
                                                </td>
                                                <td>
                                                    <%= contract.tipoProcedimento || 'N/A' %>
                                                </td>

                                                <td>
                                                    <%= contract.entidadesAdjudicantes &&
                                                        contract.entidadesAdjudicantes.length> 0
                                                        ? contract.entidadesAdjudicantes[0]
                                                        : 'N/A' %>
                                                </td>

                                                <td>
                                                    <%= contract.entidadesAdjudicatarias &&
                                                        contract.entidadesAdjudicatarias.length> 0
                                                        ? contract.entidadesAdjudicatarias[0]
                                                        : 'N/A' %>
                                                </td>

                                                <td>
                                                    <%= contract.precoContratual || 'N/A' %>
                                                </td>

                                                <td>
                                                    <%= contract.dataPublicacao ? new
                                                        Date(contract.dataPublicacao).toLocaleDateString('pt-PT')
                                                        : 'N/A' %>
                                                </td>

                                                <td>
                                                    <button class="details-button" aria-label="Ver detalhes"
                                                        data-contract-id="<%= index %>">
                                                        <i class="fas fa-plus-circle"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="7" class="no-results">Nenhum contrato encontrado.
                                                            Tente outros critérios de pesquisa.</td>
                                                    </tr>
                                                    <% } %>
                            </tbody>

                        </table>
                    </div>
                </div>


                <%- include('paginacao', { pagination: pagination }) %>
            </div>


        </div>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Adicione event listeners para os botões de detalhes
                document.querySelectorAll('.details-button').forEach(button => {
                    button.addEventListener('click', function () {
                        const contractId = this.getAttribute('data-contract-id');
                        showContractDetails(contractId);
                    });
                });

                // Função para mostrar os detalhes do contrato
                function showContractDetails(contractId) {
                    // Primeiro, esconda todos os detalhes de contrato
                    document.querySelectorAll('.contract-details').forEach(detail => {
                        detail.style.display = 'none';
                    });

                    // Mostre o container principal
                    const mainContainer = document.getElementById('main-container');
                    if (mainContainer) {
                        mainContainer.style.display = 'block';
                    }

                    // Encontre os detalhes específicos do contrato e mostre-os
                    const detailsContainer = document.getElementById(`details-${contractId}`);
                    if (detailsContainer) {
                        detailsContainer.style.display = 'block';
                    }

                    // Role a página para os detalhes
                    detailsContainer?.scrollIntoView({ behavior: 'smooth' });
                }

                // Adicione event listener para o botão de voltar
                document.querySelectorAll('.close-details').forEach(button => {
                    button.addEventListener('click', function () {
                        const contractId = this.getAttribute('data-contract-id');
                        hideContractDetails(contractId);
                    });
                });

                // Função para esconder os detalhes do contrato
                function hideContractDetails(contractId) {
                    const detailsContainer = document.getElementById(`details-${contractId}`);
                    if (detailsContainer) {
                        detailsContainer.style.display = 'none';
                    }

                    // Esconda o container principal se não houver mais detalhes visíveis
                    const mainContainer = document.getElementById('main-container');
                    if (mainContainer && !document.querySelector('.contract-details[style*="display: block"]')) {
                        mainContainer.style.display = 'none';
                    }

                    // Role de volta para a tabela
                    document.querySelector('.results-table')?.scrollIntoView({ behavior: 'smooth' });
                }

                // =================== Data Atual =========================
                lucide.createIcons();

                const spanData = document.getElementById('data-atualizacao');
                if (spanData) {
                    const hoje = new Date();
                    const meses = ['jan.', 'fev.', 'mar.', 'abr.', 'mai.', 'jun.', 'jul.', 'ago.', 'set.', 'out.', 'nov.', 'dez.'];
                    spanData.textContent = `${hoje.getDate()} ${meses[hoje.getMonth()]} ${hoje.getFullYear()}`;
                }
            });
        </script>
</body>

</html>
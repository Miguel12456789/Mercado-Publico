                            <script>
                                document.addEventListener('DOMContentLoaded', () => {
                                    // Utilitários
                                    const qs = (s, p = document) => p.querySelector(s);
                                    const qsa = (s, p = document) => [...p.querySelectorAll(s)];

                                    // ========= Preencher selects de data =========
                                    const populateDateSelectors = (yearId, monthId, dayId) => {
                                        const year = qs(`#${yearId}`), month = qs(`#${monthId}`), day = qs(`#${dayId}`);
                                        const now = new Date(), curYear = now.getFullYear();

                                        year.innerHTML = '<option disabled selected>Ano:</option>' +
                                            Array.from({ length: curYear - 1899 }, (_, i) => `<option value="${curYear - i}">${curYear - i}</option>`).join('');

                                        month.innerHTML = '<option disabled selected>Mês:</option>' +
                                            Array.from({ length: 12 }, (_, i) => `<option value="${i + 1}">${String(i + 1).padStart(2, '0')}</option>`).join('');

                                        const updateDays = () => {
                                            const y = parseInt(year.value), m = parseInt(month.value);
                                            if (!y || !m) return;
                                            const days = new Date(y, m, 0).getDate();
                                            day.innerHTML = '<option disabled selected>Dia:</option>' +
                                                Array.from({ length: days }, (_, i) => `<option value="${i + 1}">${String(i + 1).padStart(2, '0')}</option>`).join('');
                                        };

                                        year.addEventListener('change', updateDays);
                                        month.addEventListener('change', updateDays);
                                        year.value = curYear; month.value = 1; updateDays();
                                    };

                                    populateDateSelectors('from-year', 'from-month', 'from-day');
                                    populateDateSelectors('to-year', 'to-month', 'to-day');

                                    // ========= Ícones Lucide =========
                                    window.lucide?.createIcons?.();

                                    // ========= Limpar formulário =========
                                    qs('#clear-form-btn')?.addEventListener('click', () => {
                                        const form = qs('#advancedSearchForm');
                                        form?.querySelectorAll('input').forEach(i => i.type === 'checkbox' ? i.checked = false : i.value = '');
                                        form?.querySelectorAll('select').forEach(s => s.selectedIndex = 0);
                                    });

                                    // ========= Mostrar resultados =========
                                    const resultsTable = qs('#results-table'), notifContainer = qs('#notificacao-container');
                                    qsa('.search-button, .submit-button').forEach(btn => {
                                        btn.addEventListener('click', () => {
                                            resultsTable?.style.setProperty('display', 'block');
                                            notifContainer?.style.setProperty('display', 'block');
                                            resultsTable?.scrollIntoView({ behavior: 'smooth' });
                                        });
                                    });

                                    // ========= Dropdown =========
                                    const dropdownBtn = qs('#dropdown-button');
                                    const dropdownMenu = qs('#dropdown-menu');
                                    const searchInput = qs('.search-input');
                                    const selectedContract = qs('#selected-contract');

                                    const placeholderMap = {
                                        Contrato: "Pesquisar pelo objeto do Contrato",
                                        Anúncios: "Pesquisar pelo objeto do Anúncio",
                                        Entidades: "Pesquisar pelo nome da Entidade",
                                        "Modificações contratuais": "Pesquisar pela modificação contratual",
                                        "Bens móveis": "Pesquisar pelo bem móvel",
                                        "Não Celebrações de contrato": "Pesquisar pela não celebração",
                                        Impugnação: "Pesquisar pela impugnação"
                                    };

                                    dropdownBtn?.addEventListener('click', () => {
                                        const expanded = dropdownBtn.getAttribute("aria-expanded") === "true";
                                        dropdownBtn.setAttribute("aria-expanded", String(!expanded));
                                        dropdownMenu.style.display = expanded ? "none" : "block";
                                    });

                                    document.addEventListener('click', e => {
                                        if (!dropdownBtn.contains(e.target) && !dropdownMenu.contains(e.target)) {
                                            dropdownBtn.setAttribute("aria-expanded", "false");
                                            dropdownMenu.style.display = "none";
                                        }
                                    });

                                    qsa('.dropdown-item').forEach(item => {
                                        item.addEventListener('click', () => {
                                            const val = item.dataset.value;
                                            selectedContract.textContent = val;
                                            searchInput.placeholder = placeholderMap[val] || '';
                                            dropdownBtn.setAttribute("aria-expanded", "false");
                                            dropdownMenu.style.display = "none";
                                        });
                                    });

                                    // ========= Popup de Download =========
                                    const overlay = qs('#overlay'),
                                        openBtn = qs('#openPopupBtn'),
                                        closeBtn = qs('#closeBtn'),
                                        form = qs('#downloadForm'),
                                        inputs = qsa('.verification-input'),
                                        steps = ['#downloadStep1', '#downloadStep2', '#downloadStep3'].map(id => qs(id));
                                    let code = '', email = '';

                                    const showStep = stepEl => steps.forEach(s => s.classList.toggle('active', s === stepEl));
                                    const genCode = () => (code = Math.floor(100 + Math.random() * 900).toString());
                                    const sendCode = (email, code) => new Promise(res => {
                                        console.log(`Enviando código ${code} para ${email}`);
                                        setTimeout(() => res(true), 1000);
                                    });

                                    openBtn?.addEventListener('click', () => {
                                        overlay.style.display = 'flex';
                                        document.body.style.overflow = 'hidden';
                                    });

                                    const closePopup = () => {
                                        overlay.style.display = 'none';
                                        document.body.style.overflow = 'auto';
                                        showStep(steps[0]);
                                        form?.reset();
                                    };

                                    closeBtn?.addEventListener('click', closePopup);
                                    overlay?.addEventListener('click', e => e.target === overlay && closePopup());

                                    form?.addEventListener('submit', e => {
                                        e.preventDefault();
                                        email = qs('#email').value;
                                        sendCode(email, genCode()).then(() => {
                                            showStep(steps[1]);
                                            inputs[0]?.focus();
                                        });
                                    });

                                    // ========= Medidas Especiais =========
                                    const checkboxes = ['#special-measures', '#include-mec'].map(id => qs(id));
                                    const measureTypeSelect = qs('#measure-type');
                                    const updateDropdownState = () => {
                                        measureTypeSelect.disabled = !checkboxes.some(cb => cb.checked);
                                    };
                                    checkboxes.forEach(cb => cb.addEventListener('change', updateDropdownState));
                                    updateDropdownState();

                                    // ========= Localização =========
                                    const paisSelect = qs('#pais-select'),
                                        distritoSelect = qs('#distrito-select'),
                                        concelhoSelect = qs('#concelho-select');

                                    const distritosConcelhos = {/* ... o mesmo objeto, omitido aqui por brevidade ... */ };

                                    const setDisabled = (el, state) => {
                                        el.disabled = state;
                                        if (state) el.value = "";
                                    };

                                    paisSelect.addEventListener('change', () => {
                                        const isPT = paisSelect.value === 'portugal';
                                        setDisabled(distritoSelect, !isPT);
                                        setDisabled(concelhoSelect, true);
                                        concelhoSelect.innerHTML = '<option value="">Selecione um concelho</option>';
                                    });

                                    distritoSelect.addEventListener('change', () => {
                                        const concelhos = distritosConcelhos[distritoSelect.value] || [];
                                        concelhoSelect.innerHTML = '<option value="">Selecione um concelho</option>';
                                        setDisabled(concelhoSelect, !concelhos.length);
                                        concelhos.forEach(nome => {
                                            concelhoSelect.innerHTML += `<option value="${nome.toLowerCase().replace(/\s+/g, '_')}">${nome}</option>`;
                                        });
                                    });

                                    // ========= Submissão AJAX =========
                                    qs('form[action="/base_gov"]')?.addEventListener('submit', e => {
                                        e.preventDefault();
                                        const form = e.currentTarget;
                                        const data = new FormData(form);
                                        const limit = qs('#items-select')?.value || 25;

                                        const url = new URL('/base_gov', window.location.origin);
                                        url.searchParams.set('limit', limit);
                                        url.searchParams.set('page', 1);
                                        data.forEach((v, k) => url.searchParams.set(k, v));

                                        fetch(url, { headers: { 'Accept': 'application/json' } })
                                            .then(res => res.json())
                                            .then(data => {
                                                resultsTable.style.display = 'block';
                                                updateTable(data.contracts);
                                                updatePagination?.(data.pagination);
                                                resultsTable.scrollIntoView({ behavior: 'smooth' });
                                            })
                                            .catch(console.error);
                                    });
                                });
                            </script>
